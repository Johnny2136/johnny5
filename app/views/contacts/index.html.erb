<p id="notice"><%= notice %></p>

<h1>Listing Starfleet Academy Contacts</h1>

<table style="width:100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Description</th>
      <th>Email</th>
     <!--<th colspan="3"></th>-->
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.description %></td>
        <td><%= contact.email %></td>
        <td><%= link_to contact, class: 'btn btn-primary btn-xs' do %>
          <i class="glyphicon glyphicon-eye-open"></i> View <% end %></td>
        <td><%= link_to edit_contact_path(contact), class: 'btn btn-info btn-xs' do %>
          <i class="glyphicon glyphicon-pencil"></i> Edit <% end %></td>
        <td><%= link_to contact, method: :delete, data: 
          { confirm: '--RED ALERT--"Are you REALLY REALLY sure you want to do this?" --RED ALERT--' }, class: 'btn btn-danger btn-xs' do %>
          <span class="glyphicon glyphicon-trash"></span> Destroy <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_contact_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New Contact
    <% end %>
